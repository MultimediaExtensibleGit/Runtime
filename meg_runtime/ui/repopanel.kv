<RepoPanel>:
    padding: 40
    spacing: 40
    StackLayout:
        spacing: 10
        padding: 10
        size_hint: (0.4, 1)
        Label:
            text: 'Branch Name'
            size_hint_y: None
            height: 40
        Button:
            text: 'Send Changes'
            size_hint_y: None
            height: 40
        Button:
            text: 'Get Changes'
            size_hint_y: None
            height: 40
        Button:
            text: 'Check for Changes'
            size_hint_y: None
            height: 40
        Button:
            text: 'Open Repository'
            size_hint_y: None
            height: 40
            on_press: root.open_repository()
    FileChooserListView:

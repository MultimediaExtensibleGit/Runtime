<ClonePanel>:
    orientation: 'vertical'
    padding: 20
    spacing: 20
    Label:
        text: 'Repository URL'
        size_hint_y: None
        height: 30
    TextInput:
        id: repo_url
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Label:
        text: 'Folder'
        size_hint_y: None
        height: 30
    TextInput:
        id: repo_path
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Label:
        text: 'Username'
        size_hint_y: None
        height: 30
    TextInput:
        id: username
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Label:
        text: 'Password'
        size_hint_y: None
        height: 30
    TextInput:
        id: password
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Label:
        id: error_msg
        size_hint_y: None
        height: 30
    Button:
        text: 'Open Repository'
        size_hint_y: None
        height: 40
        on_press: root.clone()
